{
    "manifest_version": 2,
    "name": "Lori",
    "version": "1.2",

    "icons": {
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },

    "description": "Determines if a character is an L or an I or a 1",
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["loriContent.js"]
    }],

    "background": {
        "scripts": ["lori.js"]
    },

    "permissions": ["contextMenus"]
}